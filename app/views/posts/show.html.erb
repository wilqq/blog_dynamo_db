<h1><%= @post['title'] %></h1>

<div><%= @post['body'] %></div>

<h2>Comments</h2>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment['user']['first_name'] %> <%= comment['user']['last_name'] %></td>
        <td><%= comment['body'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Add Comment</h2>

<%= form_for :comment, url: post_comments_path(@post['uuid']) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit 'Send' %>
  </div>
<% end %>
