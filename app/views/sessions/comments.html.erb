<h2>My Comments</h2>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment['post_uuid'] %></td>
        <td><%= comment['body'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
